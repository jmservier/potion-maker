generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingredient {
  id          String @id @default(cuid())
  name        String @unique
  quantity    Int    @default(10)
  description String @default("")
}

model Recipe {
  id          String   @id @default(cuid())
  name        String   @unique
  ingredients String[]
  discovered  Boolean  @default(false)
  description String   @default("")
}

model Potion {
  id         String  @id @default(cuid())
  recipeName String
  success    Boolean @default(true)
}

